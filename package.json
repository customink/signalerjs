{
  "name": "signalerjs",
  "version": "0.4.0",
  "description": "JavaScript A/B testing feature flag library",
  "main": "dist/signalerjs.js",
  "scripts": {
    "build": "$(npm bin)/webpack",
    "test": "$(npm bin)/jest",
    "lint": "$(npm bin)/eslint src/**/*.js test/**/*.js",
    "preversion": "yarn install && npm test && npm run lint",
    "version": "npm run build && git add -A dist",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/customink/signalerjs.git"
  },
  "bugs": {
    "url": "https://github.com/customink/signalerjs/issues"
  },
  "keywords": [
    "testing",
    "a/b testing",
    "javascript",
    "feature testing"
  ],
  "author": "Jonathan Lehman <jlehman@customink.com>",
  "license": "MIT",
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.1",
    "babel-preset-es2015": "^6.24.1",
    "chai": "^4.1.0",
    "eslint": "^4.2.0",
    "eslint-plugin-babel": "^4.1.1",
    "eslint-plugin-react": "^7.1.0",
    "jest": "^20.0.4",
    "sinon": "^2.3.8",
    "webpack": "^3.3.0"
  },
  "dependencies": {
    "blueimp-md5": "^2.7.0",
    "cookies-js": "^1.2.3",
    "samplejs": "^0.2.0",
    "whatwg-fetch": "^2.0.3"
  },
  "jest": {
    "collectCoverage": true,
    "mapCoverage": true,
    "roots": [
      "./test/",
      "./src/"
    ],
    "testRegex": "_test.js"
  }
}
